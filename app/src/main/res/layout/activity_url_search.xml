<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_material_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrlSearch">


    <Button
        android:id="@+id/search"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/homebtn"
        android:background="#daf97a"
        android:text="Search"
        android:layout_toLeftOf="@+id/homebtn" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
       android:background="@drawable/index" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
      android:background="@drawable/bar2"
        android:ems="10"
        android:hint="Search or type web address"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:layout_alignParentLeft="true" />


    <WebView
        android:id="@+id/searchweb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="57dp"></WebView>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="52dp">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="8dp"
            android:layout_gravity="top"
            android:layout_marginTop="-3dp"
            android:progress="100"/>


    </FrameLayout>
</RelativeLayout>